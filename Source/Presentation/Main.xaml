<UserControl
                xmlns="http://schemas.microsoft.com/client/2007"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                x:Class="Atlanta.Presentation.Main"
                x:Name="Main"
                >
    <StackPanel Margin="5">
        <StackPanel HorizontalAlignment="Left" >
            <Button Margin="5" x:Name="_test1" Content="Test1: Get Media List" />
            <Button Margin="5" x:Name="_test2" Content="Test2: Get Media List (type book)" />
        </StackPanel>
        <ScrollViewer x:Name="_scrollViewer" Height="200" HorizontalScrollBarVisibility="Auto">
            <StackPanel x:Name="_messages">
                <TextBlock Text="Loading ..." TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</UserControl>